	prompt = false
[http "https://gopkg.in"]
	followRedirects = true

[cola]
  spellcheck = false

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

	trustExitCode = true

[pull]
	rebase = true
[rerere]
	enabled = 1
[core]
