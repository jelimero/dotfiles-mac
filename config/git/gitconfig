[hooks]
  global = ~/.githooks
  
[gui]
	pruneDuringFetch = true

[color]
	ui = auto
   interactive = true
   branch = true
   status = true

[init]
	templatedir = ~/.git_template

[commit]
	gpgsign = false

[fetch]
	prune = true

[merge]
	tool = vscode
    conflictstyle = diff3

[mergetool "vscode"]
    cmd = code --wait --new-window $MERGED
	prompt = false

[diff]
    tool = vscode
    compactionHeuristic = true
    indentHeuristic = true
    algorithm = patience

#TODO: template diff tool
